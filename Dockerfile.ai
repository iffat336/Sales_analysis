# Dockerfile.ai
# To Build: docker build -t product-cleaner -f Dockerfile.ai .
# To Run: docker run -p 8001:8001 product-cleaner

FROM python:3.9-slim

WORKDIR /app

# Install FastAPI
RUN pip install fastapi uvicorn pydantic

# Copy the Service Code
COPY ai_service.py .

# Run the Microservice on Port 8001
CMD ["uvicorn", "ai_service:app", "--host", "0.0.0.0", "--port", "8001"]
